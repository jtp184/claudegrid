{
  "name": "claudegrid",
  "version": "1.0.0",
  "description": "Real-time visualizer for Claude Code session activity using Tron's Bit character",
  "main": "server/index.js",
  "bin": {
    "claudegrid": "./bin/claudegrid.js"
  },
  "scripts": {
    "start": "node bin/claudegrid.js",
    "install-hooks": "node hooks/install.js",
    "daemon:install": "sudo bash systemd/install.sh",
    "daemon:uninstall": "sudo bash systemd/uninstall.sh",
    "daemon:status": "systemctl status claudegrid",
    "daemon:start": "sudo systemctl start claudegrid",
    "daemon:stop": "sudo systemctl stop claudegrid",
    "daemon:restart": "sudo systemctl restart claudegrid",
    "daemon:logs": "journalctl -u claudegrid -f"
  },
  "keywords": [
    "claude",
    "claude-code",
    "visualizer",
    "three.js",
    "websocket"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.16.0"
  }
}
